<% title t('.title') %>

<% if user_signed_in? %>
<div class="form-actions">
  <%= link_to t('.edit', :default => t("app.buttons.edit")),
              edit_admin_news_path(@news), :class => 'btn' %>
  <%= link_to t('.back', :default => t("app.buttons.list")),
              admin_news_index_path, :class => 'btn'  %>
  <%= link_to t('.new', :default => t("app.buttons.new_news")),
            new_admin_news_path,
            :class => 'btn btn-primary' %>
	<%= link_to t('app.buttons.admin'), admin_path,
    :class => 'btn' %>
</div>
<% end %>

<p>
  <strong><%= t('app.common.news_type')%>:</strong>
  <%= @news.news_type %>
</p>

<p>
  <strong><%= t('app.common.date_posted')%>:</strong>
  <%= l @news.date_posted %>
</p>

<p>
  <strong><%= t('app.common.data_archive_folder')%>:</strong>
  <%= @news.data_archive_folder %>
</p>

<p>
  <strong><%= t('app.common.description')%>:</strong>
</p>
<%= simple_format(@news.description, {}, :sanitize => false) %>


