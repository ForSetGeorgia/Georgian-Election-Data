<% title t('.title') %>

<% if @news.nil? || @news.empty? %>

<% else %>
	<% @news.each do |news| %>
		<h3>
			<%= l Date.new(news.date_posted.year, news.date_posted.month, news.date_posted.day), :format => :long %>
		<% if news.news_type == News::NEWS_TYPES[:data_archive] && !news.data_archive_folder.nil? && !news.data_archive_folder.empty? %>
			<span>
				<%= link_to "Go to Data Archives", "#", :class => "btn btn-primary btn-mini" %>
			</span>
		<% end %>
		<% if user_signed_in? %>
			<span>
		    <%= link_to t('.edit', :default => t("helpers.links.edit")),
		                edit_news_path(news), :class => 'btn btn-mini' %>
		    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		                news_path(news),
		                :method => :delete,
		                :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
		                :class => 'btn btn-mini btn-danger' %>
			</span>
		<% end %>
		</h3>
		<%= simple_format news.description, {}, :sanitize => false %>
	<% end %>

	<%= page_navigation_links @news %>
<% end %>


<% if user_signed_in? %>
<div class="form-actions">
  <%= link_to t('.new', :default => t("app.buttons.new_news")),
            new_news_path,
            :class => 'btn btn-primary' %>
	<%= link_to t('app.buttons.admin'), admin_path,
    :class => 'btn' %>
</div>
<% end %>
