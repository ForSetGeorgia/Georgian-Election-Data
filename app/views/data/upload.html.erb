<% title 'Upload a CSV File of Data' %>

<%= form_tag upload_data_path, :multipart => true do %>
	<div>
		<p>
			<%= link_to "Download the CSV template file for Data", export_data_path %>.
			Please note that you can add as many 'Indicator/Value' columns as you need.
		</p>
		<p>
			Important:
		</p>
		<ul>
			<li>
				Data must be provided in every column or no records will be saved.
			</li>
		</ul>
	</div>

	<div>
		<p>
			CSV File to Upload
			<%= file_field_tag 'file', :accept => 'text/csv,text/plain' %>
		</p>
		<p>
			<%= check_box_tag(:delete_records) %>
			<%= label_tag(:delete_records, "Delete existing data on file for the provided Event and Shape Type(s)") %>
		</p>
	</div>
	<div>
	  <%= submit_tag "Process CSV File" %>
	</div>
<% end %>

<%= link_to 'Back', admin_path %>
