<% title t('.title') %>

<%= form_tag upload_data_path, :multipart => true do %>
	<div>
		<p>
			<%= link_to t('.download_link_text'), export_data_path %>.
			<%= t('.instructions') %>
		</p>
		<p>
			<%= t('app.common.important') %>:
		</p>
		<ul>
			<li>
				<%= t('app.common.help_1') %>
			</li>
		</ul>
	</div>

	<div>
		<p>
			<%= t('app.common.file_upload') %>
			<%= file_field_tag 'file', :accept => 'text/csv,text/plain' %>
		</p>
		<p>
			<%= check_box_tag(:delete_records) %>
			<%= label_tag(:delete_records, t('.delete_records')) %>
		</p>
	</div>
	<div>
	  <%= submit_tag t("app.buttons.upload_csv") %>
	</div>
<% end %>

<%= link_to t('app.buttons.admin'), admin_path %>
