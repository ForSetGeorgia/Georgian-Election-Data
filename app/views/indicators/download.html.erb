<% title 'Download a CSV File of Indicators' %>

<%= form_tag download_indicators_path do %>
	<div>
		<p>
			Event
			<%= select_tag "event_id", options_from_collection_for_select(@events, "id", "name") %>
		</p>
		<p>
			Which indicator data do you want to download?
			<br />
			<%= radio_button_tag 'download_option', 'names' %>
			<%= label_tag 'download_option_names', 'Names Only'%>
			<%= radio_button_tag 'download_option', 'scales' %>
			<%= label_tag 'download_option_scales', 'Scales Only'%>
			<%= radio_button_tag 'download_option', 'both', true %>
			<%= label_tag 'download_option_both', 'Names and Scales'%>
		</p>
	</div>
	<div>
	  <%= submit_tag "Download CSV File" %>
	</div>
<% end %>

<%= link_to 'Back', admin_path %>
